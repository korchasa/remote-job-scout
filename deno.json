{
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true
  },
  "imports": {
    "react": "https://esm.sh/react@18.2.0",
    "react-dom": "https://esm.sh/react-dom@18.2.0",
    "chota": "https://esm.sh/chota@0.9.2"
  },
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-read --allow-write src/web/server.ts",
    "build": "deno run --allow-read --allow-write build.ts",
    "test": "deno test --allow-read --allow-net",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno fmt --check && deno lint && deno test"
  },
  "fmt": {
    "files": {
      "include": ["src/", "tests/"]
    }
  }
}
