{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "allowImportingTsExtensions": false,
    "types": ["vitest/globals", "node", "@testing-library/jest-dom"]
  },
  "include": [
    "tests/**/*",
    "src/**/*",
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "**/*.test.*",
    "**/*.spec.*"
  ],
  "exclude": ["node_modules", "dist", "references"]
}
